    <title>Update</title>

    <!-- CSS 연결 -->
    <link rel="stylesheet" href="/css/write.css" />
    <link rel="stylesheet" href="/css/common.css" />

    <!-- GOOGLE FONT -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
